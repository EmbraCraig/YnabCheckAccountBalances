extends ../layout.pug

block content
  .container
    form.form-signin(role='form', action="../user/", method="post", style='max-width: 300px;')
      h2.form-signin-heading New User
      input.form-control(type='text', name="name", placeholder='Your Name')
      input.form-control(type='text', name="username", placeholder='Your Username')
      input.form-control(type='password', name="password", placeholder='Your Password')
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Register
    p Details supplied are stored according to our 
      a(href='/privacy') Privacy Policy